{
    "name": "plugix/pimcore-bundle",
    "description": "Plugix AI Integration Bundle for Pimcore - AI-powered product descriptions, translations, and SEO optimization",
    "type": "pimcore-bundle",
    "license": "MIT",
    "keywords": [
        "pimcore",
        "ai",
        "plugix",
        "product-descriptions",
        "translations",
        "seo",
        "mcp",
        "model-context-protocol"
    ],
    "authors": [
        {
            "name": "Plugix",
            "email": "support@plugix.ai",
            "homepage": "https://plugix.ai"
        }
    ],
    "homepage": "https://github.com/plugix/pimcore-bundle",
    "support": {
        "issues": "https://github.com/plugix/pimcore-bundle/issues",
        "docs": "https://docs.plugix.ai/integrations/pimcore"
    },
    "require": {
        "php": ">=8.1",
        "pimcore/pimcore": "^11.0 || ^10.0",
        "symfony/http-client": "^6.0 || ^7.0",
        "symfony/config": "^6.0 || ^7.0",
        "symfony/dependency-injection": "^6.0 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Plugix\\PimcoreBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Plugix\\PimcoreBundle\\Tests\\": "tests/"
        }
    },
    "extra": {
        "pimcore": {
            "bundles": [
                "Plugix\\PimcoreBundle\\PlugixBundle"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
